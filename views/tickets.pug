extends layout

block layout-content
    div.row
        div.col.s6
            include includes/attendeeTickets.pug
        div.col.s6
            h4 Your Tickets
            br
            p If there is an event selected below, it will only show the tickets for that event
            p Please fill in the form below if you wish to refund
            p You can fetch the details of the event by using "Fetch Event"
            p Tickets of past events are non-refundable
            div.input-field
                input#ticketId.validate(type="number")
                label(for="ticketId") Ticket ID to refund
            div.input-field
                input#amount.validate(type="number")
                label(for="amount") Amount of tickets to refund
            a.waves-effect.waves-light.btn(onclick="OnRefund()") Refund
    hr
    div.row
        div.col.s2
        div.col.s8
            include includes/eventData.pug
        div.col.s2
    script(src="js/controllers/ui/tickets.js")