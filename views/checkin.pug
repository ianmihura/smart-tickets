extends layout

block layout-content
    div.View.WelcomeView
        h1.Banner SmartTickets.
        div
            div.input-field
                input#eventId.validate(type="text")
                label(for="eventId") Event Id
            div.input-field
                input#attendee.validate(type="text")
                label(for="attendee") Attendee
            div.input-field
                input#personalId.validate(type="text")
                label(for="personalId") Personal ID
            a.waves-effect.waves-light.btn(onclick="OnGetAttendeeDetails()") Validate Tickets
            br
            br
            span#attendeeDetails 0 tickets
            br
            div.input-field
                input#ticketsToCheckin.validate(type="text")
                label(for="ticketsToCheckin") Tickets to checkin
            br
            a.waves-effect.waves-light.btn(onclick="OnCheckin()") Checkin
    script(src="js/controllers/checkin.js")